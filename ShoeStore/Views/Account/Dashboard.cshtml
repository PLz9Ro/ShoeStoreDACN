@model ShoeStore.Models.Customer

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Order> OrderList = ViewBag.Orders;
}


<div class="height:700px" style="padding:100px 0">
    <div class="container my-5" style="padding:50px">

        <h3>Dashboard</h3>
        <div class="row">
            <!-- Menu bên trái -->
            <div class="col-lg-2">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active bg-secondary text-white fw-bold" id="account-dashboard-tab" data-bs-toggle="list" href="#account-dashboard" role="tab" aria-controls="account-dashboard">Dashboard</a>
                    <a class="list-group-item list-group-item-action  bg-secondary text-white fw-bold" id="account-orders-tab" data-bs-toggle="list" href="#account-orders" role="tab" aria-controls="account-orders">Orders</a>
                    <a class="list-group-item list-group-item-action  bg-secondary text-white fw-bold" id="account-details-tab" data-bs-toggle="list" href="#account-details" role="tab" aria-controls="account-details">Account Details</a>
                    <a class="list-group-item list-group-item-action  bg-secondary text-white fw-bold" id="account-logout-tab" href="logout.html">Logout</a>
                </div>
            </div>
            <div class="col-lg-1">
                <div class="list-group" id="list-tab" role="tablist">
                </div>
            </div>
            <!-- Phần hiển thị thông tin người dùng -->
            <div class="col-lg-9">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="account-dashboard" role="tabpanel" aria-labelledby="account-dashboard-tab">
                        <div class="myaccount-dashboard">
                            <p>Xin chào, <b>@Model.FullName</b> (<a href="/dang-xuat.html">Sign out</a>)</p>
                            <p><span>Email : </span>@Model.Email</p>
                            <p><span>Phone : </span>@Model.Phone</p>
                            <p><span>Address : </span>@Model.Address</p>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="account-orders" role="tabpanel" aria-labelledby="account-orders-tab">
                        <h4 class=""> Order</h4>
                        @await Html.PartialAsync("_OrderPartialView",OrderList)

                    </div>
                    <div class="tab-pane fade" id="account-details" role="tabpanel" aria-labelledby="account-details-tab">
                        <p>From your account dashboard you can view your recent orders, manage your billing addresses, and <a href="javascript:void(0)">edit your password</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
   

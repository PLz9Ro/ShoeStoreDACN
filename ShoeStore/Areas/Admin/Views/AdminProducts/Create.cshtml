@model ShoeStore.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="container-fluid">
    <div class=" mt-5 text-dark">
        <h2 class="text-center">Thêm Sản Phẩm</h2>

    </div>

    <div class="btn btn-success mb-5">
        <a class=" text-white text-decoration-none" asp-action="Index">Back to List</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <!-- Cột đầu tiên - 6 phần -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDesciption" class="control-label"></label>
                    <input asp-for="ShortDesciption" class="form-control" />
                    <span asp-validation-for="ShortDesciption" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CartegotyId" class="control-label"></label>
                    <select asp-for="CartegotyId" class="form-control" asp-items="ViewBag.CartegotyId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
            </form>
        </div>

        <div class="col-md-6">
            <!-- Cột thứ hai - 6 phần -->
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Thumb" class="control-label"></label>
                    <input asp-for="Thumb" class="form-control" />
                    <span asp-validation-for="Thumb" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label"></label>

                    <!-- Input cho URL -->
                    <div class="input-group mb-3">
                        <input asp-for="ProductImage" class="form-control" placeholder="URL của ảnh từ bên ngoài" />
                        <button type="button" class="btn btn-outline-secondary" id="btnUpload">Tải lên từ máy tính</button>
                    </div>

                    <!-- Input cho tệp tin từ máy tính -->
                    <input type="file" id="fileUpload" style="display: none;" class="form-control" />

                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="BestSellers" class="control-label"></label>
                    <input asp-for="BestSellers" class="form-control" />
                    <span asp-validation-for="BestSellers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeFlag" class="control-label"></label>
                    <input asp-for="HomeFlag" class="form-control" />
                    <span asp-validation-for="HomeFlag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('btnUpload').addEventListener('click', function() {
        document.getElementById('fileUpload').click();
    });
</script>



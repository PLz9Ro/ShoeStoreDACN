@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ShoeStore.Models.Product>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <h2 class="mt-4 text-center fw-bold">
        <p class="">
            QUẢN LÝ DANH SÁCH SẢN PHẨM  
        </p>
    </h2>
    <p class="btn btn-success ">
        <a class="text-white text-decoration-none" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Danh Mục
                </th>
                <th>
                    Giá
                </th>
                <th>
                    Tồn Kho
                </th>
                <th>
                    Trạng Thái
                </th>

                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ProductId
                    </td>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cartegoty.CategoryName)
                    </td>
                    <td>
                        @item.Price.Value.ToString("#,##0") VND
                    </td>
                    <td>
                        @if (item.UnitsStock.Value > 0)
                        {
                            <div> In Stock</div>
                        }
                        else
                        {
                            <div>
                                Out Of Stock
                            </div>
                        }
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                        <a class="btn btn-light" asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div aria-label="Page navigation">
        <ul class="pagination">
            <pager class="paper-container" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"></pager>
        </ul>
    </div>

</div>


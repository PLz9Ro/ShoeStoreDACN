@model ShoeStore.Models.Size

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="container-fluid">
    <h2 class="text-center pt-3">Chỉnh Sửa Size</h2>

    <div class="mt-2 mb-1 btn btn-success">
        <a class="text-white text-decoration-none" asp-action="Index">Back to List</a>
    </div>
    <hr />

    <form asp-action="Edit">
        <input type="hidden" asp-for="SizeId" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SizeName" class="control-label"></label>
                    <input asp-for="SizeName" class="form-control" />
                    <span asp-validation-for="SizeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SizeDescription" class="control-label"></label>
                    <input asp-for="SizeDescription" class="form-control" />
                    <span asp-validation-for="SizeDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </form>
</div>
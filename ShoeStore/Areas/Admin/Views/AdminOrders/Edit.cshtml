@model ShoeStore.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="container-fluid">
    <h2 class="mt-4 text-center">Chỉnh Sửa Order</h2>

    <div class="mt-2 mb-2 btn btn-success">
        <a class="text-white text-decoration-none" asp-action="Index">Back to List</a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="CustomerId" />
                <input type="hidden" asp-for="OrderDate" />
                <input type="hidden" asp-for="ShipDate" />
                <input type="hidden" asp-for="TransactStatusId" />
                <input type="hidden" asp-for="PaymentId" />
                <input type="hidden" asp-for="PaymentDate" />

                <div class="form-group">
                    <label asp-for="Deleted" class="control-label"></label>
                    <input asp-for="Deleted" class="form-control" />
                    <span asp-validation-for="Deleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Paid" class="control-label"></label>
                    <input asp-for="Paid" class="form-control" />
                    <span asp-validation-for="Paid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalMoney" class="control-label"></label>
                    <input asp-for="TotalMoney" class="form-control" />
                    <span asp-validation-for="TotalMoney" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
